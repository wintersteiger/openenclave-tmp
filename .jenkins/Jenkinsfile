pipeline {
  agent any
  stages {
    stage('Precommit-checking') {
      agent {
        docker {
          image 'oetools-azure:1.2'
        }

      }
      steps {
        sh 'bash ./scripts/check-precommit-reqs'
      }
    }
    stage('Build and Test') {
      parallel {
        stage('Simulation GCC SGX1 Debug') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -b Debug --compiler=gcc'
          }
        }
        stage('Simulation GCC SGX1 Release') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1 -b Release --compiler=gcc'
          }
        }
        stage('Simulation GCC SGX1 RelWithDebInfo') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1 -b RelWithDebInfo --compiler=gcc'
          }
        }
        stage('Simulation GCC SGX1-FLC Debug') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Debug --compiler=gcc'
          }
        }
        stage('Simulation GCC SGX1-FLC Release') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Release --compiler=gcc'
          }
        }
        stage('Simulation GCC SGX1-FLC RelWithDebInfo') {
          agent {
            docker {
              image 'oetools-azure:1.2'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b RelWithDebInfo --compiler=gcc'
          }
        }
        stage('Kabylake GCC SGX1 Debug') {
          agent {
            node {
              label 'SGX'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1 -b Debug -d --compiler=gcc'
          }
        }
        stage('Kabylake GCC SGX1 Release') {
          agent {
            node {
              label 'SGX'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1 -b Release -d --compiler=gcc'
          }
        }
        stage('Kabylake GCC SGX1 RelWithDebInfo') {
          agent {
            node {
              label 'SGX'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1 -b RelWithDebInfo -d --compiler=gcc'
          }
        }
        stage('Coffeelake GCC SGX1-FLC Debug') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Debug -d --compiler=gcc'
          }
        }
        stage('Coffeelake GCC SGX1-FLC Release') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Release -d --compiler=gcc'
          }
        }
        stage('Coffeelake GCC SGX1-FLC RelWithDebInfo') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b RelWithDebInfo -d --compiler=gcc'
          }
        }
        stage('Coffeelake Clang SGX1-FLC Debug') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Debug -d --compiler=clang-7'
          }
        }
        stage('Coffeelake Clang SGX1-FLC Release') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b Release -d --compiler=clang-7'
          }
        }
        stage('Coffeelake Clang SGX1-FLC RelWithDebInfo') {
          agent {
            node {
              label 'hardware'
            }

          }
          steps {
            sh 'bash ./scripts/test-build-config -p SGX1FLC -b RelWithDebInfo -d --compiler=clang-7'
          }
        }
      }
    }
  }
}
